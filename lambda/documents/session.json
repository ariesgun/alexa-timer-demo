{
    "type": "APL",
    "version": "1.4",
    "graphics": {
        "ProgressRadial": {
            "type": "AVG",
            "version": "1.0",
            "parameters": [
                "progress"
            ],
            "width": 480,
            "height": 480,
            "scaleTypeWidth": "stretch",
            "items": [
                {
                    "type": "group",
                    "description": "Progress Radial Group",
                    "items": [
                        {
                            "type": "path",
                            "description": "Progress Radial background",
                            "pathData": "M240,0 a240,240,0,1,1,0,480 a240,240,0,1,1,0,-480",
                            "stroke": "#223",
                            "strokeDashArray": [
                                1508,
                                1508
                            ],
                            "strokeWidth": 50
                        },
                        {
                            "type": "path",
                            "description": "Progress Radial",
                            "pathData": "M240,0 a240,240,0,1,1,0,480 a240,240,0,1,1,0,-480",
                            "stroke": "#ADFF2F",
                            "strokeDashArray": [
                                "${progress}",
                                1508
                            ],
                            "strokeWidth": 50
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "items": [
            {
                "type": "Container",
                "bind": [
                    {
                        "name": "repeatCounter",
                        "value": 0
                    },
                    {
                        "name": "minutes",
                        "value": 2
                    },
                    {
                        "name": "seconds",
                        "value": 0
                    }
                ],
                "height": "100vh",
                "width": "100vw",
                "handleTick": [
                    {
                        "when": "${seconds > 0 || minutes > 0}",
                        "minimumDelay": 1000,
                        "commands": [
                            {
                                "type": "SetValue",
                                "property": "repeatCounter",
                                "value": "${repeatCounter + 1}"
                            },
                            {
                                "type": "SetValue",
                                "property": "minutes",
                                "value": "${Math.floor(elapsedTime / 60000) >= 2 ? 0 : 1 - Math.floor(elapsedTime / 60000)}"
                            },
                            {
                                "type": "SetValue",
                                "property": "seconds",
                                "value": "${((Math.floor(elapsedTime / 1000) % 60) == 0 ? 59 : 59 - Math.floor(elapsedTime / 1000) % 60)}"
                            }
                        ]
                    },
                    {
                        "when": "${seconds == 0 && minutes == 0}",
                        "minimumDelay": 100,
                        "commands": [
                            {
                                "type": "SendEvent",
                                "arguments": [
                                  "Time is up"
                                ]
                            },
                            {
                                "type": "SetValue",
                                "property": "repeatCounter",
                                "value": "123"
                            }
                        ]
                    }
                ],
                "items": [
                    {
                        "type": "Container",
                        "position": "absolute",
                        "items": [
                            {
                                "type": "VectorGraphic",
                                "source": "ProgressRadial",
                                "bind": [
                                    {
                                        "name": "progress",
                                        "value": 0
                                    }
                                ],
                                "progress": "${progress}",
                                "handleTick": [
                                    {
                                        "minimumDelay": 1000,
                                        "commands": [
                                            {
                                                "when": "${progress < 1508}",
                                                "type": "SetValue",
                                                "property": "progress",
                                                "value": "${progress + 1}"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "Frame",
                        "spacing": "@spacingMedium",
                        "items": [
                            {
                                "type": "Text",
                                "fontSize": "52dp",
                                "text": "${minutes < 10 ? '0' : ''}${minutes} : ${seconds < 10 ? '0' : ''}${seconds}",
                                "width": "100%",
                                "textAlign": "center",
                                "paddingTop": "240dp"
                            }
                        ]
                    },
                    {
                        "type": "Frame",
                        "items": [
                            {
                                "type": "Text",
                                "fontSize": "24dp",
                                "text": "25-minute session",
                                "width": "100%",
                                "textAlign": "center",
                                "paddingTop": "0dp",
                                "paddingBottom": "@spacingMedium"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}