{
    "type": "APL",
    "version": "1.4",
    "graphics": {
        "ProgressRadial": {
            "type": "AVG",
            "version": "1.0",
            "parameters": [
                "progress"
            ],
            "width": 480,
            "height": 480,
            "scaleTypeWidth": "stretch",
            "items": [
                {
                    "type": "group",
                    "description": "Progress Radial Group",
                    "items": [
                        {
                            "type": "path",
                            "description": "Progress Radial background",
                            "pathData": "M240,0 a240,240,0,1,1,0,480 a240,240,0,1,1,0,-480",
                            "stroke": "#223",
                            "strokeDashArray": [
                                1508,
                                1508
                            ],
                            "strokeWidth": 50
                        },
                        {
                            "type": "path",
                            "description": "Progress Radial",
                            "pathData": "M240,0 a240,240,0,1,1,0,480 a240,240,0,1,1,0,-480",
                            "stroke": "#ADFF2F",
                            "strokeDashArray": [
                                "${progress}",
                                1508
                            ],
                            "strokeWidth": 50
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "items": [
            {
                "type": "VectorGraphic",
                "source": "ProgressRadial",
                "scale": "fill",
                "width": "100%",
                "bind": [
                    {
                        "name": "progress",
                        "value": 0
                    }
                ],
                "progress": "${progress}",
                "handleTick": [
                    {
                        "minimumDelay": 100,
                        "commands": [
                            {
                                "when": "${progress < 1508}",
                                "type": "SetValue",
                                "property": "progress",
                                "value": "${progress + 2.513}"
                            }
                        ]
                    }
                ]
            },
            {
                "type": "Container",
                "background": "blue",
                "bind": [
                    {
                        "name": "repeatCounter",
                        "value": 0
                    },
                    {
                        "name": "minutes",
                        "value": 25
                    },
                    {
                        "name": "seconds",
                        "value": 0
                    }
                ],
                "height": "100vh",
                "width": "100vw",
                "handleTick": [
                    {
                        "when": "${seconds >= 0 && minutes >= 0}",
                        "minimumDelay": 1000,
                        "commands": [
                            {
                                "type": "SetValue",
                                "property": "repeatCounter",
                                "value": "${repeatCounter + 1}"
                            },
                            {
                                "type": "SetValue",
                                "property": "minutes",
                                "value": "${24 - Math.round(elapsedTime / 60000)}"
                            },
                            {
                                "type": "SetValue",
                                "property": "seconds",
                                "value": "${(60 - Math.round(elapsedTime / 1000) % 60)}"
                            }
                        ]
                    }
                ],
                "items": [
                    {
                        "type": "Frame",
                        "backgroundColor": "green",
                        "spacing": "@spacingMedium",
                        "items": [
                            {
                                "type": "Text",
                                "fontFamily": "serif",
                                "fontSize": "32dp",
                                "text": "FOCUS SESSION",
                                "width": "100%",
                                "textAlign": "center",
                                "paddingTop": "64dp",
                                "paddingBottom": "@spacingMedium"
                            }
                        ]
                    },
                    {
                        "type": "Frame",
                        "backgroundColor": "black",
                        "spacing": "@spacingMedium",
                        "items": [
                            {
                                "type": "Text",
                                "fontSize": "52dp",
                                "text": "${minutes < 10 ? '0' : ''}${minutes} : ${seconds < 10 ? '0' : ''}${seconds}",
                                "width": "100%",
                                "textAlign": "center",
                                "paddingTop": "70dp"
                            }
                        ]
                    },
                    {
                        "type": "Frame",
                        "backgroundColor": "black",
                        "items": [
                            {
                                "type": "Text",
                                "fontSize": "24dp",
                                "text": "25-minute session",
                                "width": "100%",
                                "textAlign": "center",
                                "paddingTop": "0dp",
                                "paddingBottom": "@spacingMedium"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}